<div class="container">
  <div class="d-flex m-5">
    <% if @product.photos.attached? %>
    <% @product.photos.each_with_index do |photo, index| %>
      <%= cl_image_tag photo.key, class: "d-block w-70", style: 'width:100%; height:100%;', crop: :fill %>
    <% end %>
    <% else %>
      <div id="carouselExampleControls" class="carousel slide m-0 p-0" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag 'food01.png', class: "d-block w-100", height: 300, crop: :fill %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'food02.png', class: "d-block w-100", height: 300, crop: :fill %>
          </div>
          <div class="carousel-item">
            <%= image_tag 'food03.png', class: "d-block w-100", height: 300, crop: :fill %>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <% end %>
    <div class="mx-5">
      <h2><%= @product.name %></h2>
      <h3>R$<%= @product.price %>,00</h3>
      <p>Ingredient: <%= @product.ingredient %></p>
      <p>Quantity: <%= @product.storage %></p>
    </div>
  </div>

  <div>
    <p><%= @product.description %></p>
  </div>

  <% if policy(@product).edit? %>
  <%= link_to "Edit", edit_product_path(@product), class:"btn btn-secondary hover:text-secondary rounded-pill shadow-sm border m-1 px-5" %>
  <% end %>
  <%= button_to "Delete", @product, class:"btn btn-danger hover:text-danger rounded-pill shadow-sm border m-1 px-4", method: :delete if policy(@product).destroy? %>
</div>
